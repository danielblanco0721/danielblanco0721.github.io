---
import ServiceCard from "./ServiceCard.astro";
import { FaServer, FaCode, FaLayerGroup } from "react-icons/fa";
---

<section class="site-container mt-14 mx-auto max-w-6xl px-4">
  <h2
    class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
  >
    <span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
    <span class="drop-shadow-[2px_2px_0_#7836cf]">Servicios</span>
  </h2>

  <div class="mt-10 grid gap-6 md:grid-cols-3">
    <ServiceCard
      icon={FaServer}
      title="Desarrollo Backend"
      description="Diseño e implementación de APIs, lógica de negocio y sistemas escalables, enfocados en rendimiento, seguridad y mantenibilidad."
    />

    <ServiceCard
      icon={FaLayerGroup}
      title="Arquitectura y Datos"
      description="Modelado de bases de datos, integración de servicios y optimización de procesos backend para soluciones empresariales."
    />

    <ServiceCard
      icon={FaCode}
      title="Frontend como complemento"
      description="Desarrollo de interfaces modernas y funcionales con Vue y React, orientadas a integrarse eficientemente con el backend."
    />
  </div>
</section>
