import MiFoto from "../assets/img/MiFoto.png";

const links = [
  {
    href: "https://www.linkedin.com/in/danes17010",
    label: "LinkedIn",
  },
  {
    href: "https://github.com/danielblanco0721/",
    label: "GitHub",
